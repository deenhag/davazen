{
  "manifest_version": 3,
  "name": "DavaZen: UYAP Verimlilik Eklentisi",
  "version": "1.0.1",
  "description": "UYAP davalarını yönetmek, notlar almak ve tüm bilgilere tek bir yerden ulaşmak için minimalist ve verimli bir eklenti.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://davazen-0ynllusi0powte5v4bmbt.workers.dev/*",
    "*://*.avukat.uyap.gov.tr/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "DavaZen"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.avukat.uyap.gov.tr/dava_dosya_sorgulama.jsp*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}